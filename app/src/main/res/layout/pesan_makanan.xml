<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sttg.prak.tugas_1.MainActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50px"
        android:text="Silahkan tulis pesanan anda"
        android:textAlignment="center"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/txt_makanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="20px"
        android:text="Makanan"
        android:textSize="7pt" />

    <EditText
        android:id="@+id/e_makanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_makanan" />

    <TextView
        android:id="@+id/txt_minuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/e_makanan"
        android:layout_marginLeft="20px"
        android:text="Minuman" />

    <EditText
        android:id="@+id/e_minuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_minuman" />

    <Button
        android:id="@+id/simpan"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/e_minuman"
        android:layout_centerHorizontal="true"
        android:text="SIMPAN"
        android:textStyle="bold" />
</RelativeLayout>